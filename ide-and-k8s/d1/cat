# Verify that docker is running first
alias mobymvn="docker run -ti --rm \
    -v \$(pwd):/project/ \
    -v ~/.m2:/root/.m2 \
    -w /project/ \
    -p 8080:8080 \
    maven:3.3.9-jdk-8 \
    mvn"

mobymvn --version

git clone git@github.com:l0rd/vertx-http-booster
cd vertx-http-booster
mobymvn clean install
mobymvn vertx:run

cd ..
rm -fr ./vertx-http-booster
